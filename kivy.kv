                    user_font_size: "30sp"
                    pos_hint: {'center_x': 0.5}
                    on_release: app.right_button_3_action()
                    icon_size: "45sp"


    MDCard:
        orientation: 'vertical'
        size_hint_y: 0.3
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: "#1ca24d"
        elevation: 2
        radius: [50, 50, 2, 2]
        padding: dp(20)
        spacing: dp(20)

        MDLabel:
            text: "Pump"
            halign: 'center'
            theme_text_color: "Custom"
            text_color: "#f2f6fe"
            bold: True
            font_style : "H4"
            pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'vertical'

                MDLabel:
                    text: "Increase Speed"
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color : "#141b23"
                    bold: True
                    font_style : "H5"
                
                MDIconButton:
                    md_bg_color: "#fdbc48"
                    text_color: "#141b23" 
                    icon: "fan-chevron-up"
                    user_font_size: "30sp"
                    pos_hint: {'center_x': 0.5}
