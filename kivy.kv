                    pos_hint: {'center_x': 0.5}
                    on_release: app.right_button_1_action()
                    md_bg_color: "#fdbc48"
                    text_color: "#141b23" 
                    icon_size: "45sp"


            BoxLayout:
                orientation: 'vertical'
                spacing: dp(5)

                MDLabel:
                    text: "Pause"
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color : "#141b23"
                    bold: True
                    font_style : "H5"
                
                MDIconButton:
                    icon: "pause"
                    md_bg_color: "#cd2525"
                    text_color: "#f2f6fe" 
                    user_font_size: "30sp"
                    pos_hint: {'center_x': 0.5}
