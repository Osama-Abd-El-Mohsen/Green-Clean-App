<LoadingScreen>:
    name: 'Loading Screen'
    app: app
    
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: "#f4f9fc"
        spacing:'1dp'
        size_hint: (1, 1)
        MDBoxLayout:
            orientation: 'vertical'
            padding: '7dp'
            spacing: '20dp'
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: (.2, .2)
            md_bg_color: "#f4f9fc"

            Image:
                source: 'Assets/bg.png'
                size_hint: (5 ,1)
                pos_hint: {'center_x': 0.5 ,'center_y': 0.5}

            MDCircularProgressIndicator:
                size_hint: (.5, .5)
                size: ("48dp", "48dp")
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: "#11ac68"
                line_width : 2

