<HelpScreen_3>:
    name: 'Help Screen_3'
    app: app
    id :sec
    MDBoxLayout:
        id: boxlayout
        orientation: 'vertical'
        md_bg_color: "#f4f9fc"
        spacing:dp(20)

############################################################
########################## Top Bar #########################
############################################################
        MDTopAppBar:
            type: "small"
            pos_hint: {"center_x": .5 ,"center_y": .5}
            theme_bg_color: "Custom"
            md_bg_color: "#f4f9fc"

            MDTopAppBarLeadingButtonContainer:
                md_bg_color: "#f4f9fc"

                # MDActionTopAppBarButton:
                #     icon: "theme-light-dark"
                #     text_color:"#282827"
                #     on_release: app.switch_theme_style() 

            MDTopAppBarTitle:
                text: "[color=11ac68]Green[/color] Clean"
                markup: True
                theme_text_color: "Custom"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name:"BPoppins"
                text_color : "#0c1616"
                font_size : dp(25)

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "information"
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    md_bg_color: "#f4f9fc"
                    icon_color: "#282827"                     
                    on_release: app.info_dialog()

        MDBoxLayout:
            radius: "36dp","36dp",0,0
            pos_hint: {"center_x": .5}
            size_hint: .95, .2
            theme_bg_color: "Custom"
            md_bg_color: "#fefefe"
            padding : 20
            spacing : 10
            orientation : "vertical"

            MDBoxLayout:
                radius: "36dp"
                theme_bg_color: "Custom"
                md_bg_color: "#f4f9fc"
                orientation : "vertical"
                padding : 20
                spacing : 5
                size_hint: 1, .5

                FitImage:
                    source: "Assets/help_screen/05.png"
                    padding : 5
                    pos_hint: {"top": 1}
                    radius: "36dp", "36dp", "36dp", "36dp"
                    fit_mode : "scale-down"

                MDLabel:
                    size_hint: 1, .5
                    halign: 'right'
                    theme_text_color: "Custom"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name:"BBCairo"
                    text:  "اختار الروبوت من القائمه 1" +"\n"+  "ثم اضغط على زر الاتصال رقم 2 و انتظر حتى يصبح لون الزر أخضر"+"\n"+  "يمكنك الأن التحكم فى الروبوت"
                    text_color : "#0c1616"
                    text_color : "#0c1616"
                    font_size : dp(14)
                    font_script_name: "Arab"
                    font_direction: "rtl"

                MDLabel:
                    size_hint: 1, .5
                    halign: 'left'
                    theme_text_color: "Custom"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name:"BPoppins"
                    markup: True
                    text: "Select your robot form [color=11ac68] menu 1 [/color] then click  [color=11ac68] connect button 2 [/color]wait until the button color change to [color=11ac68] green [/color] . now you can control the robot" 
                    text_color : "#0c1616"
                    font_size : dp(12)


            MDBoxLayout:
                radius: "36dp"
                theme_bg_color: "Custom"
                md_bg_color: "#fefefe"
                orientation : "vertical"
                padding : 20
                spacing : 5
                size_hint: 1, .2

                MDIconButton:
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: "50sp"
                    size_hint: None ,None
                    size: "55dp", "55dp"

                    icon: "check"
                    pos_hint: {'center_x': 0.5}
                    on_release: app.go_back_to_main_screen2()
                    md_bg_color: "#0c1616"
                    icon_color: "#f4f9fc" 