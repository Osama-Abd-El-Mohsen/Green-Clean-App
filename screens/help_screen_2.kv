<HelpScreen_2>:
    name: 'Help Screen_2'
    app: app
        
    id :sec
    MDBoxLayout:
        id: boxlayout
        orientation: 'vertical'
        md_bg_color: "#f4f9fc"
        spacing:dp(20)

############################################################
########################## Top Bar #########################
############################################################
        MDTopAppBar:
            type: "small"
            pos_hint: {"center_x": .5 ,"center_y": .5}
            theme_bg_color: "Custom"
            md_bg_color: "#f4f9fc"

            MDTopAppBarLeadingButtonContainer:
                md_bg_color: "#f4f9fc"

                # MDActionTopAppBarButton:
                #     icon: "theme-light-dark"
                #     text_color:"#282827"
                #     on_release: app.switch_theme_style() 

            MDTopAppBarTitle:
                text: "[color=11ac68]Green[/color] Clean"
                markup: True
                theme_text_color: "Custom"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name:"BPoppins"
                text_color : "#0c1616"
                font_size : dp(25)

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "information"
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    md_bg_color: "#f4f9fc"
                    icon_color: "#282827"                     
                    on_release: app.info_dialog()

        MDBoxLayout:
            radius: "36dp","36dp",0,0
            pos_hint: {"center_x": .5}
            size_hint: .95, 1
            theme_bg_color: "Custom"
            md_bg_color: "#fefefe"
            padding : 20
            spacing : 10
            orientation : "vertical"
            
            MDBoxLayout:
                radius: "36dp"
                theme_bg_color: "Custom"
                md_bg_color: "#f4f9fc"
                orientation : "vertical"
                padding : 20
                size_hint: 1, .4

                FitImage:
                    source: "Assets/help_screen/03.png"
                    pos_hint: {"top": 1}
                    radius: "36dp", "36dp", "36dp", "36dp"
                    fit_mode : "contain"

                MDLabel:
                    size_hint: 1, .4
                    halign: 'right'
                    theme_text_color: "Custom"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name:"BBCairo"
                    markup: True
                    text: "[color=11ac68]" + " الأجهزه المقترنة" + "[/color]" + " لعرض"+ "[color=11ac68]" + " الروبوت" + "[/color]" + "1- نضغط على "  
                    text_color : "#0c1616"
                    font_size : dp(14)
                    font_script_name: "Arab"
                    font_direction: "rtl"

                MDLabel:
                    size_hint: 1, .4
                    halign: 'left'
                    theme_text_color: "Custom"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name:"BPoppins"
                    markup: True
                    text: "1- Click on [color=11ac68]Robot icon[/color] to see [color=11ac68]paired devices[/color]" 
                    text_color : "#0c1616"
                    font_size : dp(14)


            MDBoxLayout:
                radius: "36dp"
                theme_bg_color: "Custom"
                md_bg_color: "#f4f9fc"
                orientation : "vertical"
                padding : 20
                spacing : 5
                size_hint: 1, 1

                FitImage:
                    source: "Assets/help_screen/04.png"
                    pos_hint: {"top": 1}
                    radius: "36dp", "36dp", "36dp", "36dp"
                    fit_mode : "contain"

                MDLabel:
                    size_hint: 1, .3
                    halign: 'right'
                    theme_text_color: "Custom"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name:"BBCairo"
                    text:  "يمكن تحديث و عرض الروبوتس المقترنه بالضغط على الزر 1" +"\n"+  "كما يمكن تغير اسم الروبوت بالضغط على الزر 2"
                    text_color : "#0c1616"
                    font_size : dp(14)
                    font_script_name: "Arab"
                    font_direction: "rtl"

                MDLabel:
                    size_hint: 1, .3
                    halign: 'left'
                    theme_text_color: "Custom"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name:"BPoppins"
                    markup: True
                    text: "you can [color=11ac68] find and refresh[/color] paired robots by clicking button 1 and also you can [color=11ac68] rename [/color]your robot by clicking button 2" 
                    text_color : "#0c1616"
                    font_size : dp(14)



            MDBoxLayout:
                radius: "36dp"
                theme_bg_color: "Custom"
                md_bg_color: "#fefefe"
                orientation : "vertical"
                padding : 20
                spacing : 5
                size_hint: 1, .2

                MDIconButton:
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: "55sp"
                    size_hint: None ,None
                    size: "55dp", "55dp"

                    icon: "chevron-right"
                    pos_hint: {'center_x': 0.5}
                    on_release: app.go_back_to_help_3_screen()
                    md_bg_color: "#11ac68"
                    icon_color: "#f4f9fc" 
